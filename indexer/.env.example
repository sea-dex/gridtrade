# GridEx Indexer Environment Configuration
# Copy this file to .env and modify as needed

# Environment: dev or prod (default: prod in Docker)
ENV=prod

# Database Configuration (use host.docker.internal for host services)
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=gridex
DB_PASSWORD=gridex
DB_NAME=gridex
DB_SSLMODE=disable

# RPC Configuration
RPC_URL=https://bsc-testnet.gateway.tatum.io
START_BLOCK=90667111
RPC_TPM=5

# Kafka Configuration (connect to host Kafka)
KAFKA_BROKER=host.docker.internal:9092
KAFKA_TOPIC=gridex-events

# Logging
LOG_LEVEL=info

# Build arguments (optional)
VERSION=dev
COMMIT=unknown
BUILD_TIME=unknown
